{
    "name": "{{ language.params.composerVendor }}/{{ language.params.composerPackage }}",
    "description": "{{ sdk.shortDescription }}",
    "type": "library",
    "license": "{{ spec.licenseName }}",
    "support": {
        "url": "{{ spec.contactURL }}",
        "email": "{{ spec.contactEmail }}"
    },
    "autoload": {
        "psr-4": {
            "{{spec.title | caseUcfirst}}\\": "src/{{spec.title | caseUcfirst}}"
        }
    },
    "require": {
        "php": ">=7.1.0",
        "ext-curl": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10",
        "mockery/mockery": "^1.6.6"
    },
    "minimum-stability": "dev"
}