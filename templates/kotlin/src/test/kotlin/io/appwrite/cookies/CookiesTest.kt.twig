package {{ sdk.namespace | caseDot }}.cookies

import java.net.HttpCookie
import org.junit.Test
import kotlin.test.assertEquals

class CookiesTest {
    @Test
    fun cookiesToString() {
        val httpCookie = HttpCookie("name", "value").apply {
            domain = "localhost"
        }
        val internalCookie = InternalCookie(httpCookie)

        assertEquals("name=value; domain=localhost", internalCookie.toHttpCookie().toSetCookieString())
    }
}
