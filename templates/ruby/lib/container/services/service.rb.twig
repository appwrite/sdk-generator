                path: path,
                headers: headers,
                params: params,
{% if method.responseModel and method.responseModel != 'any' %}
                response_type: Models::{{method.responseModel | caseUcfirst}}
{% endif %}
            )
{% endif %}
        end

{% endfor %}
    end 
