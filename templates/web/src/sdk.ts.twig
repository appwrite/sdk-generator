type Payload = {
    [key: string]: any;
}

type Headers = {
    [key: string]: string;
}

type RealtimeResponse = {
    type: "error"|"event"|"connected"|"response";
    data: RealtimeResponseAuthenticated|RealtimeResponseConnected|RealtimeResponseError|RealtimeResponseEvent;
}

type RealtimeRequest = {
    type: "authentication";
    data: RealtimeRequestAuthenticate;
}

type RealtimeResponseEvent = {
    event: string;
    channels: string[];
    timestamp: number;
    payload: unknown;
}

type RealtimeResponseError = {
    code: number;
    message: string;
}

type RealtimeResponseConnected = {
    channels: string[];
    user?: object;
}

type RealtimeResponseAuthenticated = {
    to: string;
    success: boolean;
    user: object;
}

type RealtimeRequestAuthenticate = {
    session: string;
}

type RealtimeObject = {
    socket?: WebSocket;
    timeout?: number;
    lastMessage?: RealtimeResponse;
    channels: {
        [key: string]: ((event: MessageEvent) => void)[]
    },
    createSocket: () => void;
    authenticate: (event: MessageEvent) => void;
    onMessage: (channel: string, callback: (response: RealtimeResponseEvent) => void) => (event: MessageEvent) => void;
}

