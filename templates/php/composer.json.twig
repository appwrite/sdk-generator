{
    "name": "{{ language.params.composerVendor }}/{{ language.params.composerPackage }}",
    "description": "{{ sdk.shortDescription }}",
    "type": "library",
    "license": "{{ spec.licenseName }}",
    "support": {
        "url": "{{ spec.contactURL }}",
        "email": "{{ spec.contactEmail }}"
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "autoload": {
        "psr-4": {
            "{{ spec.namespace | caseNamespace | escapeJson }}\\": "src/{{ spec.namespace | caseNamespacePath }}"
        }
    },
    "require": {
        "php": ">=7.1.0",
        "ext-curl": "*",
        "ext-json": "*"
{%- if spec.global.headers | hasBearerAuth %},
        "adhocore/jwt": "^1.1"
{%- endif %}

    },
    "require-dev": {
        "phpunit/phpunit": "^10",
        "mockery/mockery": "1.6.12"
    },
    "minimum-stability": "dev"
}