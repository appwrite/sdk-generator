module {{spec.title | caseUcfirst}}
    class Role
        def self.any
            'any'
        end

        def self.user(id, status = "")
            if(status.empty?)
                "user:#{id}"
            else
                "user:#{id}/#{status}"
            end
        end
        
        def self.users(status = "")
            if(status.empty?)
                'users'
            else
                "users/#{status}"
            end
        end
        
        def self.guests
            'guests'
        end
        
        def self.team(id, role = "")
            if(role.empty?)
                "team:#{id}"
            else
                "team:#{id}/#{role}"
            end
        end

        def self.member(id)
            "member:#{id}"
        end
    end
end