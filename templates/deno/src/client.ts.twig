export class Client {
    endpoint: string = 'https://appwrite.io/v1';
    headers: Payload = {
        'content-type': '',
        'x-sdk-version': '{{spec.title | caseDash}}:{{ language.name | caseLower }}:{{ sdk.version }}',
{% for key,header in spec.global.defaultHeaders %}
        '{{key}}':'{{header}}',
{% endfor %}
    };

{% for header in spec.global.headers %}
    /**
