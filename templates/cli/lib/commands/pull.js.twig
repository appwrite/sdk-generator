        collections: pullCollection,
        tables: pullTable,
        buckets: pullBucket,
        teams: pullTeam,
        messages: pullMessagingTopic
    }

    if (cliConfig.all) {
        for (let action of Object.values(actions)) {
            cliConfig.all = true;
            await action({ returnOnZero: true });
        }
    } else {
